/*******************************************************/
/************************ MENU *************************/
/*******************************************************/
header {
	
	img {
		width: 50%;
		height: 80%;
		background-size: 20px;
		position: absolute;
		left: 2%;
		top: 10%;
	}
	
	.menu {
		
		height: 50px;
		
		button {
			width: 44px;
			height: 34px;
			float: right;
	  		position: relative;
	        -webkit-appearance: none;
	  		border: 1px solid #ddd;
	  		border-radius: 4px;
	  		padding: 9px 10px;
	    	margin-top: 8px;
	    	margin-right: 15px;
	    	margin-bottom: 8px;
	  		background: transparent;
	  		text-indent: -9999px;
	  		
	 		&:after {
	  			width: 22px;
	  			content: '';
	  			position: absolute;
	  			left: 10px;
	  			bottom: 9px;
	  			right: 11px;
	  			border-bottom: 2px solid black;
			}
			
			&:before {
	    		content: '';
	    		width: 22px;
	    		height: 4px;
	  			position: absolute;
	  			left: 10px;
	  			right: 11px;
	  			top: 11px;
	  			margin-top: -2px;
	  			border-top: 2px solid black;
	  			border-bottom: 2px solid black;
			}
			
			&:hover {
				outline: none;	
			}
		}
	
		.main-menu {
			background: white;
			margin-top: 50px;
			position: relative;
			z-index: 1;
			
			ul {
				display: none;
				margin-top: 0px;
				margin-bottom: 0px;
				padding-left: 0px;
				
				li {
					padding: 10px 15px 10px 15px;
					text-align: center;
					display: block;
				}
			}
			
			ul:nth-of-type(1) {
				border-top: 1px solid black;	
			}
		}
	}
}
