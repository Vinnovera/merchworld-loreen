#shopping-cart {
	
	h2 {
		width: 70vw;
		margin-top: 0;
		text-transform: uppercase;
	}
	
	.shopping-cart-item {

		img {
			width: 200px;
			height: 200px;
		}
	}
	
	&:after {
		clear: both;
		content: "";
		display: block;
	}
}
